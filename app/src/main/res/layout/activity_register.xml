<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deerbg"
    android:weightSum="1">
    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_logo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_marginBottom="40dp"/>
    <EditText
        android:layout_width="350dp"
        android:backgroundTint="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Login"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:ems="10"
        android:id="@+id/loginInput"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="350dp"
        android:backgroundTint="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:layout_below="@+id/loginInput"
        android:layout_alignStart="@+id/loginInput"
        android:hint="Email"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#ffffff"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Hasło"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/passwordInput"
        android:layout_below="@+id/emailInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="350dp"
        android:backgroundTint="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Powtórz Hasło"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:ems="10"
        android:id="@+id/repasswordInput"
        android:layout_below="@+id/passwordInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Zarejestruj się"
        android:id="@+id/registerButton"
        android:layout_below="@+id/repasswordInput"
        android:clickable="true"
        android:enabled="true"
        android:paddingLeft="0dp"
        android:background="#109d57"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAllCaps="false"
         />
</LinearLayout>
